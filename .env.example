# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=production

# Database Configuration
# Use "sqlite" for single-instance development or "postgres" for production
DB_TYPE=postgres
# SQLite settings (used when DB_TYPE=sqlite)
DB_PATH=./data/junoscommander.db
# PostgreSQL settings (used when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=junoscommander
DB_USER=postgres
DB_PASSWORD=your-postgres-password
DB_SSL_MODE=require
# Connection pool settings (applies to both)
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONN_MAX_LIFETIME=1h
DB_CONN_MAX_IDLE_TIME=10m

# Redis Configuration
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=3
REDIS_MAX_RETRIES=3

# Session Security (CHANGE THESE IN PRODUCTION!)
SESSION_TIMEOUT=8h
SESSION_KEY=change-this-32-byte-key-in-prod!
JWT_SECRET=change-this-secret-in-production

# Active Directory
AD_SERVER=ldap://your-ad-server.example.com:389
AD_PORT=389
AD_BASE_DN=DC=example,DC=com
AD_SERVICE_USER=svc_junoscommander
AD_SERVICE_PASSWORD=your-service-password
AD_USE_TLS=true

# SSH Configuration
SSH_DEFAULT_TIMEOUT=30s
SSH_MAX_CONNECTIONS=100
SSH_POOL_SIZE=10
SSH_RETRY_ATTEMPTS=3
SSH_RETRY_DELAY=5s
SSH_KEEPALIVE_INTERVAL=30s

# Task Execution
TASK_MAX_PARALLEL=20
TASK_WORKER_POOL_SIZE=50
TASK_QUEUE_SIZE=1000
TASK_DEFAULT_TIMEOUT=60s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_ENABLE_CALLER=false

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics
METRICS_INTERVAL=30s

# Health Check Configuration
HEALTH_ENABLED=true
HEALTH_TIMEOUT=5s

# Application Information
APP_SUPPORT_NAME=Network Engineering Team
APP_SUPPORT_EMAIL=neteng@example.com
APP_SUPPORT_URL=https://brndnsvr.com/junoscommander